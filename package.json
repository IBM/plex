{
  "name": "@ibm/type",
  "description": "An opinionated type for all IBM experiences, including the IBM Plex typeface.",
  "version": "0.4.1",
  "repository": "https://github.com/ibm/type.git",
  "license": "OFL-1.1 AND Apache-2.0",
  "main": "lib/index.js",
  "files": [
    "css",
    "fonts",
    "scss",
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/ibm/type/issues"
  },
  "scripts": {
    "build": "gulp clean && gulp",
    "build:js": "babel --ignore \"__tests__/*\" --presets env,stage-2 -q -d lib src",
    "generate": "node scripts/generate.js",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"**/*.{js,scss}\"",
    "prepare": "yarn build",
    "start": "yarn build && gulp watch",
    "test": "jest"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.13"
  },
  "devDependencies": {
    "@ibm/grid": "^0.2.3",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "browser-sync": "^2.18.12",
    "del": "^3.0.0",
    "fs-extra": "^4.0.2",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.7.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "menuspy": "^1.1.2",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier",
      "git add"
    ],
    "**/*.scss": [
      "prettier",
      "git add"
    ]
  }
}
